---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
    <!-- De esta forma, el ClientRouter esta disponible en toda la pagina y se puede usar para aplicar animaciones entre pagignas -->
    <ClientRouter />
	</head>
	<body>
    <div>
      <slot />
    </div>
	</body>
</html>

<style>
  @reference "../styles/global.css";
	html,
	body {
		margin: 0;
	}

  body {
    @apply grid place-content-center p-20 bg-neutral-950 text-white;
  }

  body > div {
    @apply container;
  }
</style>
